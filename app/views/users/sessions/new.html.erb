<h2>Iniciar Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, "Correo", :class=>"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"  %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Contraseña", :class=>"form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check form-check-inline mb-3">
      <%= f.check_box :remember_me, {:type => "radio", :class => "form-check-input"} %>
      <%= f.label :remember_me, "Recordarme", :class => "form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
