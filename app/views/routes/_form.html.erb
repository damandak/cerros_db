<%= form_with(model: route, local: true) do |form| %>



  <div class="mb-3">
    <%= form.label :name, "Nombre de la ruta", :class => "form-label" %><br>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <%= form.hidden_field :mountain_id, :value => @mountain.id %>  


  <% if route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% route.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="actions">
    <%= form.submit "Guardar", :class => "btn btn-primary"  %>
  </div>
<% end %>




